set PATH=%PATH%;%PROGRAMFILES%\WinRar;%PROGRAMFILES%\PuTTY

set CMD=A -afzip -o+ -s -ibck -t -m5

set FILES=ApplicationSettings.cs CHANGELOG.txt ConsoleStub.cs Core.cs Errors.cs ImportObject.cs LICENSE.txt ManualConsole.cs Reg2Run.csproj Reg2Run.sln Properties\AssemblyInfo.cs
set BINARY=bin\Release\reg2run.exe

set BUILD=5

set BATCH=batch.txt
del %BATCH%
echo cd uploads >> %BATCH%

set NAME=reg2run-2.0.%BUILD%.$WCREV$-source.zip
winrar.exe %CMD% %NAME% %FILES%
echo put %NAME% >> %BATCH%

set NAME=reg2run-2.0.%BUILD%.$WCREV$-binary.zip
winrar.exe -ep %CMD% %NAME% %BINARY%
echo put %NAME% >> %BATCH%

psftp.exe -b %BATCH% abatishchev@frs.sourceforge.net

del %BATCH%

set DIST=..\release

mkdir %DIST%
move /y reg2run-2.0.%BUILD%.$WCREV$-source.zip %DIST%
move /y reg2run-2.0.%BUILD%.$WCREV$-binary.zip %DIST%
